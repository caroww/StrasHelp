<div class="signup-form">
    <form action="" method="POST" class="php-email-form form-horizontal">
        <div class="col-xs-8 col-xs-offset-4">
            <h2>Connexion</h2>
            <p>Pour accéder à votre espace personnel, veuillez entrer votre email et votre mot de passe.</p>
        </div>
        <div class="form-row justify-content-center">
            <div class="col-lg-8 form-group">
                <input type="email" name="email" class="form-control" id="email" placeholder="Votre Email"
                       required/>
                <div class="validate"></div>
            </div>
            <div class="col-lg-8 form-group">
                <input type="password" class="form-control" name="password" id="password"
                       placeholder="Votre mot de passe" required/>
                <div class="validate"></div>
            </div>
        </div>
        <div class="text-center">
            <input type="submit" class="btn btn-danger" value="Connexion">
        </div>
    </form>
</div>
</div>
{% block content %}
    {% if errormessage != "" %}
        <div class="alert alert-danger text-center" role="alert">
            {{ errormessage }}
        </div>
    {% endif %}
{% endblock %}
</section>