{% extends 'layout.html.twig' %}

{% block content %}
    <section id="team" class="team section-bg">
        <div class="container" data-aos="fade-up">
            <div class="section-title">
                <h2>{{ identity.firstname }} {{ identity.lastname }}</h2>
                <h3>{{ identity.city }}, France</h3>
                <a href="/identity/show/{{ identity.id }}" class="get-started-btn scrollto">Revenir</a>
            </div>
            <section id="blog" class="blog">
                <div class="container" data-aos="fade-up">
                    <div class="row">
                        <div class="col-lg-2">
                        </div>
                        <div class="col-lg-8">
                            <article class="entry adverthelp">
                                {% include 'Identity/_form.html.twig' %}
                            </article>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </section>
{% endblock %}
