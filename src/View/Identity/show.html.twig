{% extends 'layout.html.twig' %}

{% block content %}
    <section id="team" class="team section-bg">
        <div class="container" data-aos="fade-up">
            <div class="section-title">
                <h2>{{ identity.firstname }} {{ identity.lastname }}</h2>
                <h3>{{ identity.city }}, France</h3>
            </div>
            <section id="blog" class="blog">
                <div class="container" data-aos="fade-up">
                    <div class="row">
                        <div class="col-lg-12 entries">
                            <article class="entry adverthelp">
                                <p class="padverthelp">{{ identity.firstname }} {{ identity.lastname }}</p>
                                <p class="padverthelp">Admin: {{ identity.isAdmin }}
                                    <small>(0 - Non / 1 - Oui)</small>
                                </p>
                                <p class="padverthelp">Statut du compte: {{ identity.accountStatus }}
                                    <small>(0 - En attente / 1 - Accept√© / 2 - Bannit)</small>
                                </p>
                                <p class="padverthelp">Ville: {{ identity.city }}</p>
                                <p class="padverthelp">Email: {{ identity.email }}</p>
                                <p class="padverthelp">Telephone: {{ identity.phone }}</p>
                                <p class="padverthelp">Credit: {{ identity.credit }}</p>
                                <p class="padverthelp">Annonces: {{ identity.publications }}</p>
                                <div class="entry-content adverts-button row">
                                    <div class="read-more col-lg-4">
                                        <a href="/identity/edit/{{ identity.id }}">Editer</a>
                                    </div>
                                    <div class="read-more col-lg-4">
                                        <a href="/identity/delete/{{ identity.id }}">Supprimer</a>
                                    </div>
                                    <div class="read-more col-lg-4">
                                        <a href="/identity/index">Revenir aux Users</a>
                                    </div>
                                </div>
                            </article>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </section>
{% endblock %}