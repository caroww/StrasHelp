<form method="post">

    <label for="firstname">Prénom :</label>
    <input type="text" value="{{ identity.firstname }}" name="firstname"><br/>

    <label for="lastname">Nom :</label>
    <input type="text" value="{{ identity.lastname }}" name="lastname"><br/>

    <label for="gender">Sexe: </label>
    <select id="gender" name="gender">
        <option value="{{ identity.gender }}">{{ identity.genderDisplay }}</option>
        <option value="male">Masculin</option>
        <option value="female">Femelle</option>
    </select><br>

    <label for="date_of_birth">Date de naissance: </label>
    <input type="date" id="date_of_birth" name="date_of_birth"
           value="{{ identity.date_of_birth }}" min="1900-01-01" max="2003-12-31"><br>

    <label for="city">Ville :</label>
    <input type="text" value="{{ identity.city }}" name="city"><br/>

    <label for="phone">Numéro de téléphone: </label>
    <input type="tel" id="phone" name="phone"
           pattern="^((\+\d{1,3}(-| )?\(?\d\)?(-| )?\d{1,5})|(\(?\d{2,6}\)?))(-| )?(\d{3,4})(-| )?(\d{4})(( x| ext)\d{1,5}){0,1}$"
           value="{{ identity.phone }}">
    <small>Ex: 0612345678</small><br>

    <label for="email">E-mail: </label>
    <input type="email" id="email" name="email" value="{{ identity.email }}"><br>

    <label for="password">Mot de passe </label>
    <input type="password" id="password" name="password" value="{{ identity.password }}"><br>

    <input type="submit" value="S'inscrire">

</form>
