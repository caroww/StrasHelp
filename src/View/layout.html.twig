    <!-- Andrej JS Files-->
    {% block javascripts %}
    <script src="https://kit.fontawesome.com/e2b701a0f5.js" crossorigin="anonymous"></script>
    {% endblock %}

</head>
<body>

{% if session.isAdmin['isAdmin'] is same as "1" %}
    {% include './layout/_header_admin.html.twig' %}
{% elseif session.isAdmin['isAdmin'] is same as "0" %}
    {% include './layout/_header_connected.html.twig' %}
{% else %}
    {% include './layout/_header.html.twig' %}
{% endif %}

{% block content %}{% endblock %}
<a href="#" class="back-to-top">
    <i class="icofont-simple-up"></i>
</a>

{% include './layout/_footer.html.twig' %}
{% block javascript %}
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
        integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
        crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx"
        crossorigin="anonymous"></script>
{% endblock %}
</body>
</html>

