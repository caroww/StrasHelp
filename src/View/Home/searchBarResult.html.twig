{% extends 'layout.html.twig' %}

{% block content %}
    <section id="team" class="team section-bg">
        <div class="container" data-aos="fade-up">
            <div class="section-title">
              <h2>Résultats pour votre recherche</h2>
              <p>{{searchWhat}} à {{searchWhere}}</p>
            </div>    
                    <ul><style>li {list-style: none;}</style>
                            {% for home in homeBar %}
                            <li>    
                                <section id="blog" class="blog">
                                    <div class="container" data-aos="fade-up">
                                        <div class="row">
                                            <div class="col-lg-12 entries">                  

                                                <article class="entry adverthelp">
                                                    <div class="entry-img">
                                                    <img src="assets/img/blog/blog-4.jpg" alt="" class="img-fluid">
                                                    </div>

                                                    <h2 class="entry-title h2adverthelp">{{ home.search_service }}</h2>
                                                    <h3 class="h3adverthelp">{{ home.name }}</h3>

                                                    <div>
                                                      <p class="padverthelp">{{ home.location }}</p>
                                                    </div>

                                                    <div class="entry-content adverts-button row d-flex justify-content-end flex-row">
                                                        <div class="read-more col-lg-3 p-2 search">
                                                            <a href="/adverts/show/{{ home.id }}">Voir l'annonce</a>
                                                        </div>
                                                    </div>
                                                </article>
                                            
                                            </div>
                                        </div>
                                    </div>
                                </section>    

                            </li>
                            {% else %}
                            <li>Aucune annonce ne correspond à votre recherche</li>
                            {% endfor %}
                          </ul>             
            
          </div>
        </section><!-- End Portfolio Section --> 
   
{% endblock %}