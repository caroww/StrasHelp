<div class="signup-form">

    <style>
        .btn-light:hover, .btn-light:focus, .btn-light:active {
            background-color: red !important;
            color: white;
        }
    </style>

    <button class="btn btn-light" type="button" data-toggle="collapse" data-target=".multi-collapse" aria-expanded="false" aria-controls="multiCollapseExample1 multiCollapseExample2">Éditer</button>
    <button class="btn btn-light" type="button" data-toggle="collapse" data-target=".multi-collapse" aria-expanded="false" aria-controls="multiCollapseExample1 multiCollapseExample2">Supprimer</button>


    <div class="collapse show multi-collapse" id="multiCollapseExample1">
        <form class="form-horizontal" method="post">

            <div class="col-xs-8 col-xs-offset-4">
                <h2>Bonjour, {{ identity.firstname }}!</h2>
            </div>

            <div class="form-group">
                <label class="control-label col-xs-4" for="firstname">Prénom :</label>
                <input type="text" value="{{ identity.firstname }}" class="form-control" name="firstname">
            </div>

            <div class="form-group">
                <label for="lastname">Nom :</label>
                <input type="text" value="{{ identity.lastname }}" class="form-control" name="lastname">
            </div>

            <div class="form-group">
                <label for="gender">Sexe: </label>
                <select id="gender" name="gender" class="form-control">
                    <option value="{{ identity.gender }}">{{ identity.genderDisplay }}</option>
                    <option value="male">Masculin</option>
                    <option value="female">Femelle</option>
                </select>
            </div>

            <div class="form-group">
                <label for="date_of_birth">Date de naissance: </label>
                <input type="date" id="date_of_birth" name="date_of_birth" class="form-control"
                       value="{{ identity.date_of_birth }}" min="1900-01-01" max="2003-12-31">
            </div>
            <div class="form-group">
                <label for="city">Ville :</label>
                <input type="text" value="{{ identity.city }}" class="form-control" name="city">
            </div>

            <div class="form-group">
                <label for="phone">Numéro de téléphone: </label>
                <div class="float-right">
                    <small>Ex: 0612345678</small>
                </div>
            </div>

            <div class="form-group">
                <input type="tel" id="phone" name="phone"
                       pattern="^((\+\d{1,3}(-| )?\(?\d\)?(-| )?\d{1,5})|(\(?\d{2,6}\)?))(-| )?(\d{3,4})(-| )?(\d{4})(( x| ext)\d{1,5}){0,1}$"
                       value="{{ identity.phone }}" class="form-control">
            </div>

            <div class="form-group">
                <label for="email">E-mail: </label>
                <input type="email" id="email" name="email" class="form-control" value="{{ identity.email }}">
            </div>

            <div class="form-group">
                <label for="password">Mot de passe </label>
                <input type="password" id="password" name="password" class="form-control"
                       value="{{ identity.password }}">
            </div>

            <input type="submit" class="btn btn-danger" value="Mettre à jour">
        </form>
    </div>

    <div class="collapse multi-collapse" id="multiCollapseExample2">
        <form class="form-horizontal" action="/memberspace/delete/{{ identity.id }}" method="post">

        <h2>Voulez-vous vraiment supprimer votre compte?</h2>

            <input type="submit" class="btn btn-danger" value="Oui, je suis sur!">
        </form>
    </div>
</div>